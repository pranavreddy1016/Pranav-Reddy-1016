#include <stdio.h>

int main()
{
    int choice, a, b;
    while (1)
    {
        printf("1.Addition :\n");
        printf("2.Subtraction :\n");
        printf("3.Multiplacition :\n");
        printf("4.Division :\n");
        printf("5.Exit :\n");
        scanf("%d", &choice);

        switch (choice)
        {
        case 1:
            printf("Enter First Digit :");
            scanf("%d", &a);
            printf("Enter Second Digit :");
            scanf("%d", &b);
            printf("Addition is :%d ", a + b);
            break;

        case 2:
            printf("Enter First Digit :");
            scanf("%d", &a);
            printf("Enter Second Digit :");
            scanf("%d", &b);
            printf("Subtraction is :%d", a - b);
            break;

        case 3:
            printf("Enter First Digit :");
            scanf("%d", &a);
            printf("Enter Second Digit :");
            scanf("%d", &b);
            printf("Multiplacition is :%d", a * b);
            break;
        case 4:
            printf("Enter First Digit :");
            scanf("%d", &a);
            printf("Enter Second Digit :");
            scanf("%d", &b);
            printf("Division  is :%d", a / b);
            break;
        case 5:
            printf("Exict");
            break;

        default:
            printf("Invalid choice\n");
        }
        printf("\n\nContinuing...\n");
    }
    return 0;
}
   
